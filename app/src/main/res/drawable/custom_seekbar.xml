<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background track -->
    <item>
        <shape android:shape="rectangle">
            <size android:height="8dp" /> <!-- Customize the height -->
            <solid android:color="#CCCCCC" /> <!-- Background color of the SeekBar -->
        </shape>
    </item>

    <!-- Progress track -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <size android:height="8dp" /> <!-- Customize the height -->
                <solid android:color="#CCCCCC" /> <!-- Color of the progress -->
            </shape>
        </clip>
    </item>
</layer-list>
