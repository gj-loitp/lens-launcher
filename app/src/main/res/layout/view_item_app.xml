<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvAppContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:stateListAnimator="@animator/a_raise"
    card_view:cardCornerRadius="@dimen/margin_app"
    card_view:cardElevation="@dimen/margin_app"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivAppIcon"
            android:layout_width="@dimen/width_app_icon"
            android:layout_height="@dimen/width_app_icon"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            tools:ignore="contentDescription"
            tools:src="@drawable/ic_launcher_round" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvAppLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_app"
            android:layout_toStartOf="@+id/btAppLock"
            android:layout_toEndOf="@+id/ivAppIcon"
            android:ellipsize="end"
            android:maxLines="3"
            android:textStyle="bold"
            tools:text="AppName" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btAppLock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/ivAppHide"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            tools:ignore="contentDescription"
            tools:text="Lock" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivAppHide"
            android:layout_width="@dimen/width_app_icon"
            android:layout_height="@dimen/height_app_action_button"
            android:layout_toStartOf="@+id/ivAppMenu"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:src="@drawable/ic_visibility_grey_24dp"
            android:tint="@color/colorAppTint"
            tools:ignore="contentDescription" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivAppMenu"
            android:layout_width="@dimen/width_app_icon"
            android:layout_height="@dimen/height_app_action_button"
            android:layout_alignParentEnd="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:src="@drawable/ic_more_vert_grey_24dp"
            android:tint="@color/colorAppTint"
            tools:ignore="contentDescription" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
